  <script>
    // Add .scrolled to header when user scrolls down
    window.addEventListener("scroll", () => {
      const header = document.querySelector("header");
      if (window.scrollY > 0) {
        header.classList.add("scrolled");
      } else {
        header.classList.remove("scrolled");
      }
    });

    // Add active class to example buttons
    const exampleButtons = document.querySelectorAll(".example-button");
    const exampleDescriptions = document.querySelectorAll(
      ".example-description"
    );
    const exampleImages = document.querySelectorAll(".example-image");

    exampleButtons.forEach((button) => {
      button.addEventListener("click", () => {
        const exampleType = button.getAttribute("data");
        // remove active class
        exampleButtons.forEach((b) => b.classList.remove("active"));
        exampleDescriptions.forEach((desc) => desc.classList.remove("active"));
        exampleImages.forEach((img) => img.classList.remove("active"));
        // add active class to the clicked button, description, and image
        button.classList.add("active");
        document
          .querySelector(`.example-description.${exampleType}`)
          .classList.add("active");
        setTimeout(() => {
          document
            .querySelector(`.example-image.${exampleType}`)
            .classList.add("active");
        }, 200);
      });
    });
  </script>
